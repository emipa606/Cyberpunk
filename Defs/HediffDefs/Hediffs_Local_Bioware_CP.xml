<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Bioware -->

  <HediffDef ParentName="BiowareHediffBase_CP">
    <defName>AdrenalBooster_CP</defName>
    <label>adrenal booster</label>
    <stages>
      <li>
        <statOffsets>
          <AimingDelayFactor>-0.1</AimingDelayFactor>
          <MeleeHitChance>-0.1</MeleeHitChance>
          <MoveSpeed>0.1</MoveSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="BiowareHediffBase_CP">
    <defName>Nanosurgeons_CP</defName>
    <label>nanosurgeons</label>
    <comps>
      <li Class="Cyberpunk.HediffCompProperties_ImplantHeal" />
    </comps>
  </HediffDef>

  <HediffDef ParentName="ImplantHediffBase_CP">
    <defName>GraftedMuscle_CP</defName>
    <label>grafted muscle</label>
    <spawnThingOnRemoved>GraftedMuscle_CP</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <CarryingCapacity>10</CarryingCapacity>
          <MaxHitPoints>10</MaxHitPoints>
        </statOffsets>
      </li>
      <li>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <verbs>
          <li>
            <verbClass>Verb_MeleeAttack</verbClass>
            <defaultCooldownTime>1.0</defaultCooldownTime>
            <meleeDamageBaseAmount>9</meleeDamageBaseAmount>
            <meleeDamageDef>Blunt</meleeDamageDef>
          </li>
        </verbs>
      </li>
    </comps>
    <addedPartProps>
      <partEfficiency>1.1</partEfficiency>
    </addedPartProps>
  </HediffDef>

  <HediffDef ParentName="BiowareHediffBase_CP">
    <defName>EnhancedAntibodies_CP</defName>
    <label>enhanced antibodies</label>
    <stages>
      <li>
        <statOffsets>
          <ImmunityGainSpeed>0.2</ImmunityGainSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="BiowareHediffBase_CP">
    <defName>ToxinBinders_CP</defName>
    <label>toxin binders</label>
    <stages>
      <li>
        <statOffsets>
          <ToxicSensitivity>-0.4</ToxicSensitivity>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>