<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>Make_KevlarFromChemfuel</defName>
    <label>make kevlar fibers from chemfuel</label>
    <description>Produce the basic fibers from which Kevlar is made.</description>
    <jobString>Producing kevlar fibers.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Kevlar_Fibers>5</Kevlar_Fibers>
    </products>
    <workSkill>Crafting</workSkill>
    <skillRequirements>
      <Crafting>10</Crafting>
    </skillRequirements>
  </RecipeDef>
  <RecipeDef>
    <defName>Make_Kevlar</defName>
    <label>make kevlar</label>
    <description>Make kevlar sheets from kevlar fibers. \n\nMakes 20 sheets of kevlar.</description>
    <jobString>Making kevlar.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Kevlar_Fibers</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Kevlar_Fibers</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Kevlar>1</Kevlar>
    </products>
    <workSkill>Crafting</workSkill>
    <skillRequirements>
      <Crafting>10</Crafting>
    </skillRequirements>
  </RecipeDef>
</Defs>